<div class="shell text-center">
  <h2 class="divider offset-top-80">Mettre à jour mon profil</h2>
  <div class="range">
    <div class="cell-md-10 cell-md-preffix-1">
      <p class="h5">Create your contact form in seconds. With CF you can manage multiple contact forms easly.</p>
    </div>
  </div>
  <div class="range">
    <div class="cell-lg-8 cell-lg-preffix-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="range">
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="cell-sm-6">
            <div class="form-group">
              <label for="last-name" class="form-label">Nom</label>
              <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Nom de famille" %>
            </div>
          </div>
          <div class="cell-sm-6 offset-xs-top-48 offset-sm-top-0">
            <div class="form-group">
              <label for="first-name" class="form-label">Prénom</label>
              <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Prénom" %>
            </div>
          </div>
          <div class="cell-sm-6 offset-top-48">
            <div class="form-group"><label for="email" class="form-label">Adresse e-mail</label>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "adresse e-mail" %>
            </div>
          </div>
          <div class="cell-sm-6 offset-top-48">
            <div class="form-group">
              <label for="phone_number" class="form-label">Numéro de téléphone</label>
              <%= f.text_field :phone_number, class: "form-control", placeholder: "Numéro de téléphone" %>
            </div>
          </div>
          <div class="cell-sm-12 display-flex offset-top-48">
            <div class="form-group">
               <span class="btn btn-default btn-file">
                  <label for="images" class="form-label">Ajouter une photo de profil !</label>
                 <%= f.file_field "avatar", type: :file %>
              </span>
            </div>
          </div>
          <div class="cell-sm-12 offset-top-25">
            <div id="photos"><%= render 'photos/list', resource => resource %></div>
          </div>
          <div class="cell-sm-12 offset-top-48">
            <div class="form-group">
              <label for="description" class="form-label">Votre biographie</label>
              <%= f.text_area :description, rows:5, col:25, class: "form-control", placeholder: "Ma description" %>
            </div>
          </div>
          <div class="cell-sm-12 offset-top-48">
            <div class="form-group">
              <label for="password" class="form-label">Modifier votre mot de passe</label>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe (si vous souhaitez changer de mot de passe" %>
            </div>
          </div>
          <div class="cell-sm-12 offset-top-48">
            <div class="form-group">
              <label for="password_confirmation" class="form-label">Confirmation de votre mot de passe</label>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>
            </div>
          </div>
          <div class="cell-xs-12 text-center offset-top-27">
          <%= f.submit "Mettre à jour", class: "btn btn-primary btn-sm btn-min-width-230" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>