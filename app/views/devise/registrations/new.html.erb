<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= render 'layouts/socialsNetworks' %>

    <h2 class="offset-top-23">Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devise_errors' %>

      <div class="form-group offset-top-23">
        <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Prénom" %>
      </div>

      <div class="form-group offset-top-23">
        <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Nom de famille" %>
      </div>

      <div class="form-group offset-top-23">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "adresse e-mail" %>
      </div>

      <div class="form-group offset-top-46">
        <label for="password" class="form-label">
          Mot de passe
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractères minimum)</em>
          <% end %>
        </label>
        <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Créer un mot de passe" %>
      </div>

      <div class="form-group offset-top-46">
        <label class="form-label" for="password_confirmation">Confirmation de votre mot de passe</label>
        <%= f.password_field :password_confirmation, required: true, class: "form-control", autocomplete: "off" %>
      </div>

      <div class="actions offset-top-23">
        <%= f.submit "Inscription", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
