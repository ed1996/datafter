<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <h2>Connexion</h2>
   <%#<%= render 'layouts/socialsNetworks' %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="offset-top-23 form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
      </div>

      <div class="offset-top-23 form-group">
        <%= f.password_field :password, autofocus: "off", class: "form-control", placeholder: "Mot de passe" %>
      </div>

        <% if devise_mapping.rememberable? %>
            <div class="form-group offset-top-23">
              <%= f.check_box :remember_me %> Se souvenir de moi
            </div>
        <% end %>

        <div class="actions offset-top-23">
          <%= f.submit "Connexion", class: "btn btn-primary" %>

          <br>
          <br>
          <%= link_to "Connexion impossible ?", new_user_password_path, class:"btn btn-primary" %>
        </div>
    <% end %>

  </div>
</div>
