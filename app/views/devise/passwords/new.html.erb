<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Réinitialiser le mot de passe</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render 'shared/devise_errors' %>

        <div class="form-group offset-top-23">
          <p>Saisissez l'adresse e-mail associé à votre compte.
          Nous vous enverrons un lien par e-mail pour réinitialiser votre mot de passe.</p>
          <%= f.email_field :email, autofocus: true, class:"offset-top-23 form-control", placeholder: "email" %>
        </div>

        <div class="actions offset-top-23">
          <%= f.submit "Envoyez un lien de réinitialisation", class:"btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>