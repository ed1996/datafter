<div class="shell">
  <div class="text-center">
    <ol class="breadcrumb">
      <li><a href="index.html">Home</a></li>
      <li><a href="#">Pages</a></li>
      <li>Contact Us</li>
    </ol>
  </div>
  <% if current_user.subscribed? %>
    <h2 class="divider offset-top-80 text-center">Vous êtes déjà abonné.</h2>
  <% else %>
      <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
      <script type="text/javascript">
          Stripe.setPublishableKey('<%= Rails.configuration.stripe[:publishable_key] %>');
      </script>
    <h2 class="divider offset-top-80 text-center">Souscription à l'abonnement</h2>
    <div class="range">
      <div class="cell-md-8 cell-md-preffix-2">
        <div class="jc-center display-flex">
          <%= link_to 'Paiement avec Stripe', new_subscriber_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-transparent-2 btn-sm'}  %>
        </div>
        <div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-sm" role="document">
            <div class="modal-content">
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>