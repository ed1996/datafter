<div class="panel panel-default">
  <div class="panel-heading">
    Rendre hommage
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @hommage, html: {multipart: true} do |f| %>
          <%= render 'shared/errors' %>
        <div class="row">
            <div class="form-group">
              <%= f.text_field :last_name, placeholder:"Nom du défunt", class:"form-control" %>
            </div>
        </div>

          <div class="row">
            <div class="form-group">
              <%= f.text_field :first_name, placeholder:"Prénom du défunt", class:"form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              Date de naissance
              <%= f.date_field :date_birth, class:"form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              Date de décès
              <%= f.date_field :date_death, class:"form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <%= f.text_field :burial_place, placeholder:"Lieu de l'enterrement", class:"form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <span class="btn btn-default btn-file">
                Téléchargez les photos !
                <%= file_field_tag "images[]", type: :file %>
              </span>
            </div>
          </div>

          <div id="photos"><%= render 'photos/list' %></div>

          <div class="row">
            <div class="form-group">
              <%= f.text_area :description, placeholder:"Biographie du défunt", class:"form-control" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Je valide mon annonce", class:"btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>